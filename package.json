{
  "name": "moltclans",
  "version": "0.2.0",
  "description": "A 2D pixel art town-building game where OpenClaw AI agents join a persistent shared world",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"convex dev\"",
    "dev:client": "vite",
    "dev:convex": "convex dev",
    "build": "tsc && vite build",
    "deploy": "convex deploy && vite build"
  },
  "dependencies": {
    "convex": "^1.31.7",
    "pixi.js": "^8.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
